body
  left 0
  margin 0
  overflow hidden
  position relative

.menu
  background #202024 
  left -200px
  height 100%
  position fixed
  width 200px
  ul
    border-top 1px solid #636366
    list-style none
    margin 0
    padding 0
  li
    border-bottom 1px solid #636366
    font-family 'Open Sans', sans-serif
    line-height 45px
    padding-bottom 3px
    padding-left 20px
    padding-top 3px
  li:hover
    background-color #63a6fd


  a
    color #FFFFFF
    font-size 15px
    text-decoration none
    text-transform uppercase
    
.title
  position relative
  top 40px
  left 50%
  width 100%
  font-family "Open Sans", "Helvetica", "Arial", sans-serif 
  font-size 42px
  text-shadow 0 0 10px #000000


.jumbotron
  background url('./images/index.jpg') no-repeat center center 
  min-height 100%
  min-width 100%
  background-size cover
  color #FFFFFF

.icon-close
  cursor pointer
  padding-left 10px
  padding-top 10px

.icon-menu
  color #fff
  cursor pointer
  font-family 'Open Sans', sans-serif
  font-size 20px
  padding-bottom 25px
  padding-left 25px
  padding-top 25px
  text-decoration none
  text-transform uppercase
  text-shadow 2px 2px 2px #000000
  i
    margin-right 5px

